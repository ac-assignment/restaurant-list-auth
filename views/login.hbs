<link rel="stylesheet" href="/stylesheets/user.css">
<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card loginCard">
        <div class="card-body">
          <h2 class="text-center mt-3">登入</h2>
          {{> message}}
          <form action="/user/login" method="POST">
            <div class="form-group">
              <label for="email">信箱</label>
              <input id="email" class="form-control" type="email" name="email" placeholder="Enter Email">
            </div>
            <div class="form-group">
              <label for="password">密碼</label>
              <input id="password" class="form-control" type="password" name="password" placeholder="Enter Password">
            </div>
            <button type="submit" class="btn btn-success btn-block">登入</button>
            <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook</a>
          </form>
          <p class="mt-4">
            新朋友? <a href="/user/register">註冊</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
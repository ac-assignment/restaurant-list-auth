<link rel="stylesheet" href="/stylesheets/user.css">
<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card loginCard">
        <div class="card-body">
          <h2 class="text-center mt-3">註冊</h2>
          {{> message}}
          <form action="/user/register" method="POST">
            <div class="form-group">
              <label for="name">名字</label>
              <input id="name" class="form-control" type="text" name="name" placeholder="Enter Name" value="{{name}}">
            </div>
            <div class="form-group">
              <label for="email">信箱</label> <span class="text-danger">*</span>
              <input id="email" class="form-control" type="email" name="email" placeholder="Enter Email" value="{{email}}">
            </div>
            <div class="form-group">
              <label for="password">密碼</label> <span class="text-danger">*</span>
              <input id="password" class="form-control" type="password" name="password" placeholder="Enter Password" value="{{password}}">
            </div>
            <div class="form-group">
              <label for="confirmPassword">確認密碼</label> <span class="text-danger">*</span>
              <input id="confirmPassword" class="form-control" type="password" name="confirmPassword" placeholder="Confirm Password" value="{{confirmPassword}}">
            </div>
            <button type="submit" class="btn btn-success btn-block">註冊</button>
            <a href="/auth/facebook" class="btn btn-primary btn-block">Facebook</a>
          </form>
          <p class="mt-4">
            已有帳號? <a href="/user/login">登入</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>